<aura:component access="global" controller="FilteredListViewAuraController" >
	<aura:attribute name="options" type="List" access="PRIVATE"/>
    <aura:attribute name="language" type="String" access="public"/>
    <aura:attribute name="selectedValue" type="String"/>
    <aura:attribute name="sObjectType" type="String"/>
    <aura:attribute name="error" type="String"/>
    
    <aura:handler name="init" value="{!this}" action="{!c.init}" />
    
    <aura:registerEvent name="componentEvent" type="c:selectedListViewEvent"/>
    <aura:handler name="change" value="{!v.options}" action="{!c.handleOptionsChange}"/>
    
    <aura:if isTrue="{!not(empty(v.options))}">
        <lightning:select name="colorId" label="{!v.sObjectType + 's'}" aura:id="colorId" value="{!v.selectedValue}" class="slds-text-heading_medium slds-p-bottom_none" onchange="{!c.handleSelectionChange}">
            <aura:iteration items="{!v.options}" var="option">
                <option text="{!option.label}" value="{!option.value}" selected="{!option.value == v.selectedValue}"/>
            </aura:iteration>
        </lightning:select>
    </aura:if>
    
    <aura:if isTrue="{!AND(empty(v.options), empty(v.selectedValue))}">
		{!v.error}    
    </aura:if>

</aura:component>